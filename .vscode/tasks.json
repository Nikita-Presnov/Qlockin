{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean all binaries",
            "detail": "Remove all build folder.",
            "type": "shell",
            "command": "rm -r -f build/",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Release",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release -G Ninja -S . -B ./build/release && cmake --build ./build/release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -G Ninja -S . -B ./build/debug && cmake --build ./build/debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "uic",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command":"uic -o qlockin/ui_lockinapp.h lockinapp.ui && uic -o qlockin-lite/ui_lockinapplite.h lockinapplite.ui"
        }
